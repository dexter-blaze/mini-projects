<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <!-- Types of instructors -->
    <bean class="com.dexterBlaze.CodingNinjas.JavaInstructor"
          id="javaInstructor" init-method="init" destroy-method="cleanup"/>
    <bean class="com.dexterBlaze.CodingNinjas.SpringInstructor"
          id="springInstructor" init-method="init" destroy-method="cleanup"/>

    <!-- UserList interface with SimpleUserList class -->
    <!-- Why prototype? -> List of the courses would be different -->
    <bean class="com.dexterBlaze.CodingNinjas.SimpleUserList"
          id="userList" scope="prototype"/>

    <!-- Types of courses -->
    <bean class="com.dexterBlaze.CodingNinjas.PaidCourse" id="javaCourse">
        <constructor-arg ref="javaInstructor"/>
        <constructor-arg ref="userList"/>
    </bean>
    <bean class="com.dexterBlaze.CodingNinjas.PaidCourse" id="springCourse">
        <constructor-arg ref="springInstructor"/>
        <constructor-arg ref="userList"/>
    </bean>
    <!-- since each user is different, so prototype -->
    <bean class="com.dexterBlaze.CodingNinjas.SimpleUser" scope="prototype" id="simpleUser"/>

</beans>